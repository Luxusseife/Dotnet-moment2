@model List<Moment2.Models.BookModel>

@{
    // Deklarerar variabel som representerar modellen.
    var books = Model;
}

<h1>@ViewData["Title"]</h1>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Release Year</th>
                <th>Author</th>
                <th>Read</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.ReleaseYear</td>
                    <td>@book.Author</td>
                    <td>@book.Status</td>
                    <td>
                    <form method="post" asp-action="Delete" asp-controller="Home" class="delete">
                        <input type="hidden" name="id" value="@book.Id" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
                    </form>
                </td>
                </tr>
            }
        </tbody>
    </table>
</div>
